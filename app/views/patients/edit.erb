<div class="container">
    <div class="row"> 
        <div class="two columns"><br></div>
        <div class="eight columns"> <h4>Edit Patient </h4></div>
         <div class="two columns"><br></div>
    </div>
   <% form_for @patient,:html =>{ :multipart => true } do |f|  %>
    <div class="row"> 
        <div class="two columns"><br></div>
        <div class="eight columns">  <%= f.label :Name  %><br />
    <%= f.text_field :name %></div>
         <div class="two columns"><br></div>
    </div>
    <div class="row"> 
        <div class="two columns"><br></div>
        <div class="eight columns">  <%= f.label :Age  %><br />
                                  <%= f.text_field :age %></div>
         <div class="two columns"><br></div>
    </div>
    
    <div class="row"> 
        <div class="two columns"><br></div>
        <div class="eight columns"><%= f.label :Profile_Picture  %><br />
    <%= f.file_field :avatar %></div>
        </div>
    
    
     <div class="row"> 
        <div class="two columns"><br></div>
        <div class="eight columns">  <%= f.label :Username  %><br />
    <%= f.text_field :username %></div>
         <div class="two columns"><br></div>
    </div>
     <div class="row"> 
        <div class="two columns"><br></div>
        <div class="eight columns">  <%= f.label :Password  %><br />
    <%= f.password_field  :password %></div>
         <div class="two columns"><br></div>
    </div>
     <div class="row"> 
        <div class="two columns"><br></div>
        <div class="eight columns">  <%= f.label :confirm_Password  %><br />
    <%= f.password_field  :password %></div>
         <div class="two columns"><br></div>
    </div>
    <div class="row"> 
        <div class="two columns"><br></div>
        <div class="button-primary">   <%= f.submit "Save"%> 
            <%= link_to 'Back',patients_path %></div>
         <div class="two columns"><br></div>
    </div>
    <% end %>
</div>