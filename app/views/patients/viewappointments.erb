           <div class="eight columns"> <tr><th>No.</th>
                   <th>Doctor name</th><th>Appointment date</th>
                   <th>Appointment time</th><th>Duration(min)</th>
                   <th>Option</th></tr> </div> 
    </div>
<% @appointments.each_with_index do|appo,i| %>   
